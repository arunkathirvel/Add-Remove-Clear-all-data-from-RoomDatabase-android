<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/userid_tv_op"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/userid_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tamil_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/name_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/english_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/tamil_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/maths_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/english_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/science_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/maths_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/social_tv_op"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/science_tv_op"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
